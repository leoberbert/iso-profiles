menuentry "BigCommunity Live Base" --class=@DIST_NAME@.@ARCH@ --class=bigcommunity {
  echo -e "Please wait, Inicitializing Operating System..."
  set gfxpayload=keep
  linux /boot/vmlinuz-x86_64 misobasedir=manjaro misolabel=BIGLINUXLIVE wayland driver=nonfree rd.driver.blacklist=nouveau modprobe.blacklist=nouveau nvidia-drm.modeset=1 i915.modeset=1 radeon.modeset=1 amdgpu.modeset=1 nowatchdog tsc=nowatchdog cryptomgr.notests no_timer_check rcupdate.rcu_expedited=1 rw nosoftlockup audit=0 nomce skew_tick=1 intremap=off split_lock_detect=off clearcpuid=514 transparent_hugepage=never loglevel=3 systemd.show_status=auto rd.udev.log_level=3 lang=pt_BR keytable=br-abnt2 tz=America/Sao_Paulo vconsole.font=Uni2-Fixed16
  initrd /boot/amd_ucode.img /boot/intel_ucode.img /boot/initramfs-@ARCH@.img
}

menuentry "Boot existing OS" --class=harddisk {
  set root=(hd0)
  chainloader +1
  boot
}

